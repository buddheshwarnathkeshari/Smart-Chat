<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ChatActivity"
    android:background="@android:color/darker_gray">

    <include android:id="@+id/chat_toolbar"
        layout="@layout/app_bar_layout"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/message_list_of_users"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

android:layout_marginBottom="6dp"
        android:layout_below="@id/chat_toolbar"
        android:layout_above="@id/ll_suggestions"
        />


    <LinearLayout
        android:id="@+id/ll_suggestions"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:background="@drawable/suggestion_outer"
        android:gravity="center"
        android:layout_above="@id/ll_sendmsg">

        <TextView
            android:id="@+id/tv_reply_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textAlignment="center"
            android:onClick="suggestionClicked"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:background="@drawable/suggestion_inner"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            />

        <TextView
            android:id="@+id/tv_reply_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hi"
            android:textAlignment="center"
            android:layout_weight="1"
            android:onClick="suggestionClicked"
            android:background="@drawable/suggestion_inner"
            android:paddingHorizontal="10dp"
            android:layout_marginHorizontal="10dp"
            android:paddingVertical="5dp"
            />


        <TextView
            android:id="@+id/tv_reply_3"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_width="0dp"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="Hey!"
            android:onClick="suggestionClicked"
            android:background="@drawable/suggestion_inner"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
android:background="#ffffff"
        android:layout_alignParentBottom="true"
        android:id="@+id/ll_sendmsg">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_message"
            android:layout_alignParentLeft="true"
            android:padding="17dp"
            android:layout_toLeftOf="@id/img_btn_send_file"
            android:hint="Enter your message..."/>

        <ImageButton
            android:layout_width="50dp"
            android:background="#ffffff"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_font"
            android:id="@+id/img_btn_scan"
            android:layout_marginRight="10dp"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_btn_send_msg"/>

        <ImageButton
            android:layout_width="50dp"
            android:background="#ffffff"
            android:layout_height="35dp"
            android:src="@drawable/ic_folder"
            android:id="@+id/img_btn_send_file"
            android:layout_marginRight="10dp"
            android:tint="@color/colorPrimary"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/img_btn_scan"/>
        <ImageButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_send_24"
            android:id="@+id/img_btn_send_msg"
            android:layout_centerVertical="true"
            android:tint="@color/colorPrimary"
            android:background="#ffffff"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

</RelativeLayout>























